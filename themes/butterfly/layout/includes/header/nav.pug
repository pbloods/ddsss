        #search-button
          a.nav-rightbutton.site-page.social-icon.search
            i.fas.fa-search.fa-fw
        #darkmode_navswitch
          a.nav-rightbutton.site-page.darkmode_switchbutton(onclick="switchDarkMode()")
            i.fas.fa-adjust
        #toggle-menu
          a.nav-rightbutton.site-page
            i.fas.fa-bars.fa-fw